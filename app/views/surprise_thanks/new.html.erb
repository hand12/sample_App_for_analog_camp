<div class="display_content_new_page">
  <div class="section_top">
    <div class="section_content">
      <div class="section_title">
        あなたの感謝を教えてください。
      </div>
    </div>
  </div>
  <div class="section_main">
    <div class="section_post_surprise_thanks">
      <div class="form_panel">
        <%= form_for SurpriseThank.new do |f| %>
          <div class="title_form">
            <label for="surprise_thank_title">タイトル</label>
            <%= f.text_field :title %>
          </div>
          <div class="user_form">
            <label for="surprise_thank_dear_name">To</label>
            <%= f.text_field :dear_name %>さん
          </div>
          <div class="image_form">
            <label for="surprise_thank_image"><i aria-hidden="true" class="fa fa-picture-o"></i></label>
            <%= f.file_field :image %>
          </div>
          <div id="image_field">
          </div>
          <div class="episode_form">
            <label for="surprise_thank_episode">エピソード</label>
            <%= f.text_area :episode %>
          </div>
          <%= f.submit value="投稿する"%>
        <% end %>
      </div>
    </div>
  </div>
</div>